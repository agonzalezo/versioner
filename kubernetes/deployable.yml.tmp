apiVersion: v1
kind: Service
metadata:
  name: service-api-versioner
  namespace: xylon
  labels:
    component: ClusterIP
spec:
  type: ClusterIP
  selector:
    microservice: api-versioner
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: api-versioner
  namespace: xylon
  labels:
    microservice: api-versioner
spec:
  replicas: 1
  selector:
    matchLabels:
      microservice: api-versioner
  template:
    metadata:
      labels:
        microservice: api-versioner
        component: appserver
    spec:
      containers:
        - name: api-versioner
          image: agonzalezo/versioner:latest
          imagePullPolicy: Always
          # command:
          #   - "/usr/bin/tail"
          #   - "-f"
          #   - "/dev/null"
          ports:
            - containerPort: 3000
          env:
            - name: PORT
              value: "3000"
            - name: API_NAME
              value: versioner
            - name: APPVERSION
              value: 1.0.0
          resources:
            requests:
              memory: "100Mi"
              cpu: "500m"
            limits:
              memory: "200Mi"
              cpu: "1000m"
